<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="text-muted">Project Details</h3>
  </div>
  <div class="panel-body">
    <h4>Description</h4>
    <p><%= @project.description %></p>

    <h4>Production Notes</h4>
    <p><%= @project.production_notes %></p>

    <h4>Credits</h4>
    <p><%= @project.credits %></p>

    <h4>Production date</h4>
    <p><%= @project.date_production.try(:stamp, 'January 1, 2015') %></p>

    <h4>Production year</h4>
    <p><%= @project.production_year %></p>

    <h4>Owner</h4>
    <p><%= @project.owner.owner_name %></p>
  </div>
</div>