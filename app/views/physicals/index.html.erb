<h1>Physical Tape Archive</h1>
<p>
  <%= link_to 'Add a New Tape', new_physical_path, class: 'btn btn-primary' %>


  <%= form_tag("/physicals", method: "get", role: "search", class: "form-inline") do %>
    <div class="form-group">
      <%= text_field_tag(:search, nil, placeholder: "Tape ID or Title", class: "form-control") %>
    </div>
    <%= submit_tag("Search", class: "btn btn-default") %>
  <% end %>

</p>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Tape</th>
      <th>New box</th>
      <th>Old box</th>
      <th>Title</th>
      <th>Label title</th>
      <th>Label info</th>
      <th>Actual date</th>
      <th>Owner</th>
      <th>Format</th>
      <th>Brand</th>
      <th>Condition</th>
      <th>Process Step</th>
      <th>Notes</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @physicals.each do |physical| %>
      <tr>
        <td><%= physical.tape %></td>
        <td><%= physical.new_box %></td>
        <td><%= physical.old_box %></td>
        <td><%= physical.title %></td>
        <td><%= physical.label_title %></td>
        <td><%= physical.label_info %></td>
        <td><%= physical.date_actual %></td>
        <td><%= physical.owner.owner_name %></td>
        <td><%= physical.tape_format.tape_format %></td>
        <td><%= physical.brand.brand %></td>
        <td><%= physical.condition.condition %></td>
        <td><%= physical.try(:process_step).try(:process_step) %></td>
        <td><%= physical.notes %></td>
        <td>
          <%= link_to content_tag(:i, nil, class: "fa fa-eye"), physical %>
          <%= link_to content_tag(:i, nil, class: "fa fa-pencil"), edit_physical_path(physical) %>
          <%= link_to content_tag(:i, nil, class: "fa fa-trash-o"), physical, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script>
  var offset = $('.navbar').height();
  $('table').stickyTableHeaders({fixedOffset: offset});
</script>
